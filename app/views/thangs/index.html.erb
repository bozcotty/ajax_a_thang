<h1>All the Thangs</h1>

<table id='index_list'>
  <thead>
    <tr>
      <th class="stay">Name</th>
      <th class="stay">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @thangs.each do |thang| %>
      <tr>
        <td class ="nama"><%= thang.name %></td>
        <td class="descripo"><%= thang.description %></td>
        <td><%= link_to 'Show', thang, remote: true %></td>
        <td><%= link_to 'Edit', edit_thang_path(thang), remote: true %></td>
        <td><%= link_to 'Destroy', thang, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

